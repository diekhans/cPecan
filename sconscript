import os
from cgtscons import *

# clone to avoid modifying parent enviroment
Import("env",)
env = env.Clone()

libAddCPecan(env)
libAddSonLib(env)

##
# cPecanLib
##
cpEnv = env.Clone()
makeIncludesDepends(cpEnv, globInclude(cpEnv, [Dir("#/mods/cPecan/include")]))
buildStaticLibrary(cpEnv, CPECAN_LIB_NAME,
                   getSrcPaths("src",
                               ("multipleAligner.c", "pairwiseAligner.c", "stateMachine.c")))

##
# programs
##
linkProg(cpEnv, "cPecanAlign", ("src/cPecanRealign.c",))
linkProg(cpEnv, "cPecanRealign", ("src/cPecanRealign.c",))
