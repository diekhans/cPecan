import os
from cgtscons import *

# clone to avoid modifying parent enviroment
Import("env",)
env = env.Clone()

libAddCPecan(env)
libAddSonLib(env)

##
# cPecanLib
##
buildStaticLibrary(env, CPECAN_LIB_NAME,
                   getSrcPaths("src",
                               ("multipleAligner.c", "pairwiseAligner.c", "stateMachine.c")))

##
# programs
##
linkProg(env, "cPecanAlign", ("src/cPecanRealign.c",))
linkProg(env, "cPecanRealign", ("src/cPecanRealign.c",))
