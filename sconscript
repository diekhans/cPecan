import os
from cgtscons import *

# clone to avoid modifying parent enviroment
Import("env",)
env = env.Clone()

libAddCPecan(env)
libAddSonLib(env)

##
# cPecanLib
##
buildStaticLibrary(env, CPECAN_LIB_NAME,
                   getSrcPaths("src",
                               ["multipleAligner.c", "pairwiseAligner.c", "stateMachine.c"]))

##
# programs
##
linkProg(env, None, "src/cPecanAlign.c")
linkProg(env, None, "src/cPecanRealign.c")
installPyProgs(env, getSrcPaths("bin", ["cPecanEm.py", "cPecanModifyHmm.py"]))
